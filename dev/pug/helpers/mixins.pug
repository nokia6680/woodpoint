mixin breadcrumbs-item(text,href)
	li.breadcrumbs__item
		if(href)
			a.breadcrumbs__link(href=href)=text
		else
			span.breadcrumbs__text=text

mixin contactsItem(text, href, icon)
	li.contacts__block-item
		if(icon)
			span.contacts__block-icon
				svgn
					use(xlink:href="static/images/sprite/symbol/sprite.svg#" +i.icon)
		if(href)
			a(href="" +href target="_self").contacts__blocks-link=text
		else
			spam.contacts__blocks-address=text

mixin introSlide(image, title, text)
	.intro__slide.swiper-slide
		picture.intro__slide-frame
			source(media="(min-width: 768px)" srcset="static/images/content/" +image +".webp 1x, static/images/content/" +image +"_2x.webp 2x" type="image/webp")
			source(media="(min-width: 768px)" srcset="static/images/content/" +image +"_2x.jpg")
			source(srcset="static/images/content/" +image +"-mb.webp 1x, static/images/content/" +image +"-mb_2x.webp 2x" type="image/webp")
			img(src="static/images/content/" +image +"-mb_2x.jpg" width="" height="" alt="").intro__slider-img
		.intro__slide-info
			b.intro__slide-title=title
			p.intro__slide-text=text